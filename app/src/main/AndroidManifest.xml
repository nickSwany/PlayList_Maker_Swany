<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.plmarket.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name="com.example.plmarket.search.MediatecaActivity"
            android:exported="false" />
        <activity
            android:name="com.example.plmarket.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name="com.example.plmarket.search.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.plmarket.player.presentation.PlayerActivity"
            android:exported="false" />
        <activity
            android:name="com.example.plmarket.search.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>