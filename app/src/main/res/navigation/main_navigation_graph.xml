<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/mediaFragment">

    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.example.plmarket.media.ui.fragment.MediaFragment"
        android:label="fragment_mediateca"
        tools:layout="@layout/fragment_mediateca" >
        <action
            android:id="@+id/action_mediaFragment_to_fragmentNewPlayList"
            app:destination="@id/fragmentNewPlayList" />
        <action
            android:id="@+id/action_mediaFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_playListReviewFragment"
            app:destination="@id/playListReviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.plmarket.search.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_playerFragment2"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.plmarket.settings.ui.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/fragmentNewPlayList"
        android:name="com.example.plmarket.media.ui.fragment.NewPlayListFragment"
        android:label="fragment_new_play_list"
        tools:layout="@layout/fragment_new_play_list" />
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.plmarket.player.ui.fragment.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" >
        <action
            android:id="@+id/action_playerFragment_to_fragmentNewPlayList"
            app:destination="@id/fragmentNewPlayList" />
    </fragment>
    <fragment
        android:id="@+id/playListReviewFragment"
        android:name="com.example.plmarket.media.ui.fragment.PlayListReviewFragment"
        android:label="fragment_playlist_review"
        tools:layout="@layout/fragment_playlist_review" >
        <action
            android:id="@+id/action_playListReviewFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_playListReviewFragment_to_fragmentNewPlayList"
            app:destination="@id/fragmentNewPlayList" />
    </fragment>
</navigation>