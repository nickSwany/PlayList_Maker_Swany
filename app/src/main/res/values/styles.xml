<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="back_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:layout_marginStart">@dimen/size_4</item>
        <item name="android:layout_marginTop">@dimen/size_4</item>
        <item name="icon">@drawable/back</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="color_text">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="back_main">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="back_settings">
        <item name="android:background">@color/white</item>
    </style>
    <style name="grey_background">
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
    <style name="grey_to_dark">
        <item name="android:tint">@color/grey</item>
    </style>
    <style name="grey_backgroundTint">
        <item name="android:backgroundTint">@color/light_grey</item>
    </style>
</resources>