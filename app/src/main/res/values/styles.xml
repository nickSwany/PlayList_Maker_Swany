<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="back_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/size_48</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:layout_marginStart">@dimen/size_4</item>
        <item name="android:layout_marginTop">@dimen/size_4</item>
        <item name="icon">@drawable/back</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="delete_history" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">Очистить историю</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="color_text">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="back_main">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="back_settings">
        <item name="android:background">@color/white</item>
    </style>

    <style name="grey_background">
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="grey_to_dark">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="grey_backgroundTint">
        <item name="android:backgroundTint">@color/light_grey</item>
    </style>

    <style name="settings_card_track">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="tint">@color/gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="dark_to_white">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mistakeImageNotFound">
        <item name="android:src">@drawable/light_mode_smth_not_wrong</item>
    </style>

    <style name="mistakeImageNotInternet">
        <item name="android:src">@drawable/light_mode_no_internet</item>
    </style>

    <style name="button_play">
        <item name="android:src">@drawable/button_play</item>
    </style>

    <style name="button_like">
        <item name="android:src">@drawable/button_like</item>
    </style>

    <style name="button_add">
        <item name="android:src">@drawable/button_add</item>
    </style>

    <style name="back">
        <item name="navigationIcon">@drawable/back</item>
    </style>

    <style name="button_theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorOnSecondary">@color/dark_theme</item>
    </style>

    <style name="button_media_play_list">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="tabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>
    <style name="textTab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="bottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/buttom_selected</item>
        <item name="itemTextColor">@color/buttom_selected</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Widget.EdText.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
        <item name="boxStrokeColor">@color/edit_selected</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="card_playList">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="bottom_sheet">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="backGround_for_cardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>